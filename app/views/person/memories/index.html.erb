<!--person/memories/index-->
<div id="memory_index">
	
	<div id="timelines">
		<% TimeFrame.all.sort.each do |time_frame| %>
			<div title="<%= time_frame.representation %>" id="time_frame_<%= time_frame.id %>" class="timeline my_border" 
				style="margin-top: <%= time_frame.big_picture_offset %>px; min-height:<%= time_frame.big_picture_length %>px; display:none">
				
				<div class="keys"><%= time_frame.memory_ids %></div>
				
			</div>
		<% end %>
		
		<div id="life_time_frame" class="timeline" style="display:none">
			.
		</div>
	</div>
	
	<!--memory.time_frames.each?-->
	<div id="memories">
		<% @memories.each do |memory| %>
			<div id="memory_<%= memory.id %>" class="memory">
				<%= render :partial => "person/memories/partials/memory_block", :locals => { :memory => memory } %>
			</div>
		<% end %>
	</div>
	
	
</div>